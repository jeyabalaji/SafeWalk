<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.dal.safewalk.MainActivity">

    <EditText
        android:id="@+id/editText4"
        android:layout_width="340dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Source"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText5"/>
    <EditText
        android:id="@+id/editText5"
        android:layout_width="336dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Destination"
        tools:layout_editor_absoluteY="72dp" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>
    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" android:text="Morning(6:00 - 12:00)"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/radioButton3"
        tools:layout_editor_absoluteY="140dp"/>
    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginRight="6dp"
        android:text="Afternoon(12:00 - 17:00)" app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="140dp"/>
    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp" android:text="Evening(17:00 - 22:00)"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/radioButton5"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2"/>
    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginRight="45dp"
        android:layout_marginTop="7dp"
        android:text="Night(22:00 - 6:00)" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton3"/>



</android.support.constraint.ConstraintLayout>
